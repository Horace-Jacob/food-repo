@{
    ViewBag.Title = "Dashboard";
}

<div id="admin-panel">
        <div id="sidebar">
            <h2>Admin Panel</h2>
           <ul>
                <li><a href="/">Dashboard</a></li>
                <li><a href="/menu">Menu</a></li>
                <li><a href="/order">Order</a></li>
                <li><a href="/login">Logout</a></li>
            </ul>
        </div>

        <div id="content">
            <div id="navbar">
                <h2>Dashboard</h2>
                
            </div>

            
            
                <div id="dashboard-stats">
                    
                </div>
            
                <table>
                    <!-- Your table content -->
                </table>
            </div>
            
        </div>

        @section scripts{
    <script>
        $(function(){
            Auth();
            CallAdminDataPartial();
        })
        

        function CallAdminDataPartial(){
            $.ajax({
				cache: false,
				url: '@Url.Action("_admindata", "Home")',
				type: "GET",
				success: function(response){
					$("#dashboard-stats").empty().append(response);
				},
				error: function(error){
					console.log(error)
				}
			})
        }
        function Auth(){
           const token = localStorage.getItem("token");
           if(token == null){
               location.href = "/login";
           }
       }

    </script>
}