

@{
    ViewBag.Title = "Menu";
}

<div id="admin-panel">
        <div id="sidebar">
            <h2>Admin Panel</h2>
            <ul>
                <li><a href="/">Dashboard</a></li>
                <li><a href="/menu">Menu</a></li>
                <li><a href="/order">Order</a></li>
                <li><a href="/login">Logout</a></li>
            </ul>
        </div>

        <div id="content">
            <div id="navbar">
                <h2>Dashboard</h2>
                <div>
                    <a href="/add">Add menu</a>
                </div>
            </div>

            <div id="allmenu"></div>
        </div>
    </div>

@section scripts{
    <script>
        $(function(){
             Auth();
            CallAllMenuPartial();
        })
        

        function CallAllMenuPartial(){
            $.ajax({
				cache: false,
				url: '@Url.Action("_allmenu", "Menu")',
				type: "GET",
				success: function(response){
					$("#allmenu").empty().append(response);
				},
				error: function(error){
					console.log(error)
				}
			})
        }

        function EditMenuClick(id){
            localStorage.setItem("edititem", id);
            location.href = "/edit";
        }

        function RemoveMenuClick(id){
            $.ajax({
				cache: false,
				url: '@Url.Action("RemoveMenu", "Menu")',
				type: "GET",
                data: {id},
				success: function(response){
                    alert("Menu Removed")
					CallAllMenuPartial();
				},
				error: function(error){
					console.log(error)
				}
			})
        }

        function Auth(){
           const token = localStorage.getItem("token");
           if(token == null){
               location.href = "/login";
           }
       }
    </script>
}